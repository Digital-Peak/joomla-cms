<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="fieldparams" label="COM_FIELDS_FIELD_BASIC_LABEL">
		<fieldset name="fieldparams">
			<field
				name="directory"
				type="text"
				default=""
				class="input-xxlarge"
				label="COM_FIELDS_FIELD_IMAGELIST_DIRECTORY_LABEL"
				description="COM_FIELDS_FIELD_IMAGELIST_DIRECTORY_DESC"
			/>

			<field
				name="preview"
				type="list"
				class="btn-group"
				default="tooltip"
				label="COM_FIELDS_FIELD_MEDIA_PREVIEW_LABEL"
				description="COM_FIELDS_FIELD_MEDIA_PREVIEW_DESC"
			>
				<option value="tooltip">COM_FIELDS_FIELD_MEDIA_PREVIEW_TOOLTIP</option>
				<option value="true">COM_FIELDS_FIELD_MEDIA_PREVIEW_INLINE</option>
				<option value="false">JNO</option>
			</field>

			<field
				name="home"
				type="radio"
				class="btn-group btn-group-yesno"
				default="0"
				label="COM_FIELDS_FIELD_MEDIA_HOME_LABEL"
				description="COM_FIELDS_FIELD_MEDIA_HOME_DESC"
			>
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>

			<field
				name="image_class"
				type="textarea"
				label="COM_FIELDS_FIELD_MEDIA_IMAGE_CLASS_LABEL"
				description="COM_FIELDS_FIELD_MEDIA_IMAGE_CLASS_DESC"
				class="input-xxlarge"
				size="40"
			/>
		</fieldset>
	</fields>
</form>
